<% provide(:title, 'Sign up') %>
<%= render('layouts/pitari_help')%>
<div id="pitari-logo-container" class="row">
  <div class="col-md-1">
      <span id="pitari-logo">Pitari</span>
  </div>
  <div class="col-md-1">
    <span id="pitari-help">Help</span>
  </div>
</div>

<div class="row m-0">
  <div class="col-md-6 col-md-offset-3 user-join-form content-center">
    <%= form_for @user, :url => {:action => 'create'} do |f| %>
      <h2>Join the meeting</h2>
      <h2>「<%=@user.discuss.name %>」</h2>
        <div class="input-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Please input your name...' %>
        <%= f.hidden_field :discuss_id, :value => @user.discuss_id %>
        <span class="input-group-btn">
          <%= f.submit "join", class: "btn btn-default" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
